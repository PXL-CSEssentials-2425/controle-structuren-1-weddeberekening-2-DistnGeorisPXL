        <TextBox Name="vatNumberCheckTextBox" HorizontalAlignment="Left" Margin="364,91,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="36"/>
        <TextBox Name="priceTextBox" HorizontalAlignment="Left" Margin="280,160,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>
