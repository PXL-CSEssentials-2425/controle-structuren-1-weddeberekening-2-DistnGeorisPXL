        <Button Name="calculateBtn" Content="Berekenen" HorizontalAlignment="Left" Margin="556,154,0,0" VerticalAlignment="Top" Width="120" Height="30" Click="calculateBtn_Click"/>
        <Button Name="clearBtn" Content="Wissen" HorizontalAlignment="Left" Margin="556,229,0,0" VerticalAlignment="Top" Width="120" Height="30" Click="clearBtn_Click"/>
        <Button Name="closeBtn" Content="Sluiten" HorizontalAlignment="Left" Margin="556,310,0,0" VerticalAlignment="Top" Width="120" Height="30" Click="closeBtn_Click"/>

    </Grid>
</Window>
